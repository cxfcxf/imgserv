<div class="page-header">
	<h1>Welcome To Stage1st</br><small>image upload service</small></h1>
</div>

<div class="container">
	<div class="row">
		<div class="span4">Display images uploaded by user</div>
			<div class="span8 offset8">
				<h2>Log in</h2>
			<div class="form-inputs">
				<%= simple_form_for "user", :url => user_session_path do |f| %>
				<%= f.input :email, placeholder: 'Email Address' %>
				<%= f.input :password, placeholder: 'Password' %>
					<div class="control-group boolean inline optional">
						<%= f.check_box :remember_me %><%= f.label "Stay signed in for this computer?" %>
					</div>
					<div class="form-action">
					<%= f.submit "Sign In", class: "btn btn-primary"%>
				</div>
				<p><%= link_to "Forgot your password?", new_password_path('user') %></p>
			<% end %>
			</div>
		</div>
	</div>
</div>