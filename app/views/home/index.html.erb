<div class="page-header">
	<h1>Welcome To Stage1st</br><small>image upload service</small></h1>
</div>

<div class="container">
	<div class="row">
		<div class="span4">Display images uploaded by user</div>
			<div class="span8 offset8">
				<h2>Log in</h2>
			<div class="field">
				<%= form_for("user", :url => user_session_path) do |f| %>
				<p>Email:  <%= f.text_field :email %></p>
				<p>Password:  <%= f.password_field :password %></p>
				<%= f.check_box :remember_me %>
				<%= f.label :remember_me %>
				<div class="form-action">
					<%= f.submit "Sign In", class: "btn btn-primary"%>
				</div>
				<p><%= link_to "Forgot your password?", new_password_path('user') %></p>
			<% end %>
			</div>
		</div>
	</div>
</div>